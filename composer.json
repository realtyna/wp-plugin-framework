{
    "name": "realtyna/wp-plugin-framework",
    "description": "A framework for developing WordPress plugins with consistent design and structure.",
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Realtyna\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Chandler P",
            "email": "chandler.p@realtyna.net"
        }
    ],
    "minimum-stability": "stable",
    "keywords": [
        "wordpress",
        "plugin",
        "framework"
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "support": {
        "issues": "https://github.com/realtyna/wp-plugin-framework/issues",
        "source": "https://github.com/realtyna/wp-plugin-framework"
    },
    "scripts": {
        "test": "phpunit",
        "install-wp-tests": "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
    }
}
